                                                        <label class="control-label">Features</label>
                                                        <textarea name="SGFeatures" class="form-control" rows="1"></textarea>
                                                    </div>
                                                    @*SunGlass Code*@
                                                </td>
                                                <td id="dynamicTd" colspan="3">

                                                    <label class="control-label">Description</label>
                                                    <textarea name="Description" class="form-control mb-3" rows="7"></textarea>

                                                    <div class="pull-right">

                                                        <button type="button" id="btnAddToList" class="btn btn-rounded btn-sm btn-outline-success"> <i class="zmdi zmdi-playlist-plus"></i> Add</button>
                                                        <button type="button" id="btnNewItemCancel" class="btn btn-rounded btn-sm btn-outline-danger"> <i class="zmdi zmdi-close"></i> Cancel</button>
                                                    </div>
                                                </td>
                                            </tr>
                                            <!--Input Fields-->
                                        </tbody>
                                    </table>
                                </div>

                            </form>
                        </div>


                        @if (Model.Count() <= 0)
                        {
                            <div class="text-center">
                                <span class="badge font-11 badge-soft-purple"> There is no record found</span>

                            </div>
                        }
                        else
                        {
                            <div class="table-responsive order-stats">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Product Details</th>
                                            <th>Branding</th>
                                            <th>Prices</th>
                                            <th>

                                            </th>
