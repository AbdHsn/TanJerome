        $('#btnPrint').on('click', () => {
            //// Get the element.
            var element = document.getElementById('printSection');
            //// Generate the PDF.
            var opt = {
                margin: 0,
                filename: $('#orderNo').text() + '.pdf',
                html2canvas: { scale: 1 },
                image: { type: 'jpeg', quality: 0.98 },
                jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' },
            };
            html2pdf().set(opt).from(element).save();
        });


         //PayementMethod Change Event
        $('#paymentMethodId').on('change', () => {

            var id = $('#paymentMethodId').val();
            switch (+id) {
                case 1:
                    $('#paidAmount').show();
                    break;
                default:
                    $('#paidAmount').hide();
                    showMessage("This feature is not implemented yet.", "", "info");
            }
        });

        //Receiving Payement
        $('#btnPaymentReceive').on('click', () => {

            var paidAmount = $('#paidAmount').val();
            if (paidAmount === "" || paidAmount > @Model.Order.GrandTotal) {
                showMessage("Please check your paid amount. ", "", "warning");
                return;
            }

            modelObject = {
                orderId: @Model.Order.Id,
                orderNo: "@Model.Order.OrderNo",
                userId: @Model.User.Id,
                paidAmount: paidAmount,
                paymentMethodId: $('#paymentMethodId').val(),
                redirectLink: "/Orders/CLOrderInvoice"
            };

            insertRecordWithoutForm("Orders", "CreatePayment", modelObject, "icoReceive", "zmdi zmdi-money");
        });

    </script>

}

