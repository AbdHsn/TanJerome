                                                <td class="extraFields" style="display:none">
                                                    @*Frame Code
                                                    Frame Id: 1*@
                                                    <div class="frameFields">
                                                        <label class="control-label">Model</label>
                                                        <input name="FRModel" type="text" class="form-control" placeholder="Type" style="height:30px">
                                                        <label class="control-label">Color</label>
                                                        <input name="FRColor" type="color" class="form-control" placeholder="Color" style="height:30px">
                                                    </div>
                                                    @*Frame Code
                                                    Contact Lens Code*@
                                                    <div class="contactLensFields">
                                                        @*ContactLens Id: 2*@
                                                        <label class="control-label">Diameter</label>
                                                        <input name="CLDiameter" type="text" class="form-control" placeholder="Diameter" style="height:30px">
                                                        <label class="control-label">Features</label>
                                                        <textarea name="CLFeatures" class="form-control" rows="7"></textarea>
                                                    </div>
                                                    @*Contact Lens Code
                                                    SunGlass Code
                                                    SunGlass Id: 3*@
                                                    <div class="sunglassFields">
                                                        <label class="control-label">Type</label>
                                                        <input name="SGType" type="text" class="form-control" placeholder="Type" style="height:30px">
                                                        <label class="control-label">Frame Color</label>
                                                        <input name="SGFrameColor" type="color" class="form-control" placeholder="Frame Color" style="height:30px">
